<% include ../partials/header.ejs %>

<h1> Manage Clients</h1>
<% if (user) { %>
<a href="/myclients/add">Add new clients and projects</a>
<% } %>
<table class="table table-striped table-bordered table-hover">
    <tr>
        <th>First Name </th>
        <th>Last Name</th>
        <th>starttime</th>
        <th>endtime</th>
        <th>date</th>
        <th> parentname</th>

        <% if (user) { %> <th>Manage</th> <% } %>
    </tr>
<% for (var i=0; i < lists.length; i++) { %>

    <tr>
        <td class="success"><%= lists[i].firstname %></td>
        <td><%= lists[i].lastname %></td>
        <td><%= lists[i].starttime %></td>
        <td><%= lists[i].endtime %></td>
        <td class="info"><%= lists[i].date %></td>
        <td><%= lists[i].parentname %></td>


        <% if (user) { %>
        <td>
            <a href="/myclients/<%= lists[i]._id %>" class="btn btn-info">Edit</a>
            <a href="/myclients/delete/<%= lists[i]._id %>" class="btn btn-info confirmation">Delete</a>

        </td>
        <% }%>
    </tr>


    <% }%>
</table>

<% include ../partials/footer.ejs %>
