<% include ../partials/header.ejs %>


<main class="container">


   <h2 class="page-head-line">Edit Clients/Projects</h2>

           <form method="post">
               <div class="form-group">
                   <label for="parentname" class="col-sm-2 control-label">Full Name: </label>
                   <input name="parentname" id="parentname" required value="<%= list.parentname %>" />
               </div>

                       <div class="form-group">
                   <label for="phone" class="col-sm-2 control-label">Phone </label>
                   <input name="phone" id="phone" type:"number"required value="<%= list.phone %>" />
               </div>

               <div class="form-group">
                   <label for="campername" class="col-sm-2 control-label">Camper Name: </label>
                   <input name="campername" id="campername" required  value="<%= list.campername %>" />
               </div>
               <div class="form-group">
                   <label for="campername2" class="col-sm-2 control-label">Camper 2 Name: </label>
                   <input name="campername2" id="campername2" value="<%= list.campername2 %>" />
               </div>
               <div class="form-group">
                   <label for="campername3" class="col-sm-2 control-label">Camper 3 Name: </label>
                   <input name="campername3" id="campername3" value="<%= list.campername3 %>" />
               </div>
               <div class="form-group">
                   <label for="notes" class="col-sm-2 control-label">Notes: </label>
                   <input name="notes" id="notes" required max="100" value="<%= list.notes %>" />
               </div>
               <div class="form-group">
                   <label for="medical" class="col-sm-2 control-label">Medical: </label>
                   <input name="medical" id="medical" required max="100" value="<%= list.medical %>" />
               </div>
               <div class="form-group">
                   <label for="code" class="col-sm-2 control-label">Code </label>
                   <input name="code" id="code"  type="number" value="<%= list.code %>" />
               </div>
               <button class="btn btn-success col-sm-offset-2">Save</button>


           </form>
</main>








<% include ../partials/footer.ejs %>
